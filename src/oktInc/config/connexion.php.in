<?php
/*
 * Configuration de connexion à la base de données
 */

switch ($this->options->get('env'))
{
	/* environnement de production (serveur) */
	case 'prod' :

		# hote de la base de données
		$sDbHost = '%%DB_PROD_HOST%%';

		# nom de la base de données
		$sDbName = '%%DB_PROD_BASE%%';

		# nom d'utilisateur de la base de données
		$sDbUser = '%%DB_PROD_USER%%';

		# mot de passe de la base de données
		$sDbPassword = '%%DB_PROD_PASS%%';

		# préfix des tables de la base de données
		$sDbPrefix = '%%DB_PROD_PREFIX%%';

		break ;

	/* environnement de développement (local) */
	case 'dev' :

		# hote de la base de données
		$sDbHost = '%%DB_DEV_HOST%%';

		# nom de la base de données
		$sDbName = '%%DB_DEV_BASE%%';

		# nom d'utilisateur de la base de données
		$sDbUser = '%%DB_DEV_USER%%';

		# mot de passe de la base de données
		$sDbPassword = '%%DB_DEV_PASS%%';

		# préfix des tables de la base de données
		$sDbPrefix = '%%DB_DEV_PREFIX%%';

		break ;


	default :
		die('Okatea could not find good environment for database connexion.');
		break ;
}
